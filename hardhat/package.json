{
  "name": "coophive-hardhat",
  "version": "0.1.x",
  "license": "Apache-2.0",
  "private": true,
  "description": "CoopHive: Decentralized Generic Marketplace protocol",
  "author": "Hiro <laciferin@gmail.com>",
  "scripts": {
    "setup": "remixd -i slither",
    "gen-env": "cd ..; ./stack ts-node scripts/print-env.ts > .env.gen",
    "postinstall": "npm run setup",
    "dev": "remixd",
    "style": "prettier -w .",
    "start": "hardhat node",
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "hardhat:local": "hardhat node",
    "test": "DOTENV_CONFIG_PATH=../.env.hardhat hardhat test",
    "deploy": "hardhat deploy",
    "deploy:calibration": "DOTENV_CONFIG_PATH=../.env.calibration hardhat deploy --network calibration",
    "deploy:coophive": "DOTENV_CONFIG_PATH=../.env.coophive hardhat deploy --network coophive",
    "deploy:sepolia": "DOTENV_CONFIG_PATH=../.env.sepolia hardhat deploy --network sepolia"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.4",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@remix-project/remixd": "^0.6.24",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/bluebird": "^3.5.42",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.14",
    "bluebird": "^3.7.2",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.5",
    "hardhat-deploy": "^0.11.45",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^1.0.10",
    "moment": "^2.30.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "solc": "^0.8.24",
    "solidity-coverage": "^0.8.6",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.5",
    "@openzeppelin/contracts-upgradeable": "^4.9.5",
    "dotenv": "^16.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=6.0.0",
    "pnpm": ">=8.6.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CoopHive/hive"
  },
  "bugs": {
    "url": "https://github.com/CoopHive/hive/issues"
  }
}
